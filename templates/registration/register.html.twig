{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-md-center p-2">
            <div class="card col-md-10">
                <div class="card-body">
                <h1 class="mb-4">Register</h1>

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.username, {'attr': {'class': 'form-control mb-2'}}) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-2'}}) }}
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control mb-2'}}) }}

                    <button class="btn btn-outline-success mt-3">{{ button_label|default('Register') }}</button>
                {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
