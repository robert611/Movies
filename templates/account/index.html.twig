{% extends 'account/account_template.html.twig' %}

{% block account_body %}
    <div class="row">
        <div class="col-12 col-md-12 ps-md-4 mb-5">
            {% if app.user.isVerified is same as(false) %}
                <div class="mb-4">
                    <a href="{{ path('app_send_email_verification_link') }}" class="d-grid gap-2 text-decoration-none">
                        <button type="button" class="btn btn-warning p-3">Twój adres email nie został jeszcze potwierdzony! Kliknij aby otrzymać link potwierdzający.</button>
                    </a>
                </div>
            {% endif %}

            <h4 class="mb-4">Nazwa Użytkownika: {{ app.user.username }}</h4>

            <h4 class="mb-4">Twój Email: {{ app.user.email }}</h4>

            <div class="card card-body mb-4">
                {{ form_start(changeEmailForm) }}
                    <div class="mb-3">
                        {{ form_label(changeEmailForm.password, 'Hasło') }}
                        {{ form_widget(changeEmailForm.password, {'attr': {'class': 'form-control mt-2 mb-2'}}) }}
                        
                        <div class="error-msg">
                            {{ form_errors(changeEmailForm.password) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(changeEmailForm.newEmail, 'Nowy Email') }}
                        {{ form_widget(changeEmailForm.newEmail, {'attr': {'class': 'form-control mt-2 mb-2'}}) }}

                        <div class="error-msg">
                            {{ form_errors(changeEmailForm.newEmail) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-dark" id="change_email_form_button">Zmień Email</button>
                {{ form_end(changeEmailForm) }}
            </div>

            <h4 class="mb-4">Twoje Hasło: ************</h4>

            <div class="card card-body">
                {{ form_start(changePasswordForm) }}
                    <div class="mb-3">
                        {{ form_label(changePasswordForm.oldPassword, 'Stare Hasło') }}
                        {{ form_widget(changePasswordForm.oldPassword, {'attr': {'class': 'form-control mt-2 mb-2'}}) }}
                        
                        <div class="error-msg">
                            {{ form_errors(changePasswordForm.oldPassword) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(changePasswordForm.newPassword.first) }}
                        {{ form_widget(changePasswordForm.newPassword.first, {'attr': {'class': 'form-control mt-2 mb-2'}}) }}

                        <div class="error-msg">
                            {{ form_errors(changePasswordForm.newPassword.first) }}
                        </div>

                        {{ form_label(changePasswordForm.newPassword.second) }}
                        {{ form_widget(changePasswordForm.newPassword.second, {'attr': {'class': 'form-control mt-2 mb-2'}}) }}

                        <div class="error-msg">
                            {{ form_errors(changePasswordForm.newPassword.second) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-dark" id="change_password_form_button">Zmień Hasło</button>
                {{ form_end(changePasswordForm) }}
            </div>
        </div>
    </div>
{% endblock %}
