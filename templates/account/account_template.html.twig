{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }} 
    <link rel="stylesheet" href="{{ asset('assets/css/account_side_menu.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-3 mb-4">
                {% include 'account/_side_menu.html.twig' %}
            </div>
            <div class="col-md-9">
                {% if app.session.flashBag.has('account_success') %}
                    {% for msg in app.session.flashBag.get('account_success') %}
                        <div class="alert alert-success mt-3">
                            {{ msg }}
                        </div>
                    {% endfor %}
                {% endif %}

                {% if app.session.flashBag.has('account_error') %}
                    {% for msg in app.session.flashBag.get('account_error') %}
                        <div class="alert alert-danger mt-3">
                            {{ msg }}
                        </div>
                    {% endfor %}
                {% endif %}
                
                {% block account_body %}
                    
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
