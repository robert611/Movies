{% extends 'admin/base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/admin/delete_link_form.js') }}"></script>
    <script src="{{ asset('assets/js/admin/add_episode_link.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="card mb-4 mt-4">
        <div class="card-header admin-layout-color no-border-radius">
            Add episode for show {{ showDatabaseTableName }}
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="form-group mb-3">
                    {{ form_label(form.title, 'Title', {'label_attr': { 'class' : 'mb-1' }}) }}
                    {{ form_widget(form.title, {'attr': { 'class' : 'form-control' }}) }}
                    <div class="error-msg form-error mt-1">
                        {{ form_errors(form.title) }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.season, 'Season', {'label_attr': { 'class' : 'mb-1' }}) }}
                    {{ form_widget(form.season, {'attr': { 'class' : 'form-control' }}) }}
                    <div class="error-msg form-error mt-1">
                        {{ form_errors(form.season) }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.episode_number, 'Episode Number', {'label_attr': { 'class' : 'mb-1' }}) }}
                    {{ form_widget(form.episode_number, {'attr': { 'class' : 'form-control' }}) }}
                    <div class="error-msg form-error mt-1">
                        {{ form_errors(form.episode_number) }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': { 'class' : 'mb-1' }}) }}
                    {{ form_widget(form.description, {'attr': { 'class' : 'form-control' }}) }}
                    <div class="error-msg form-error mt-1">
                        {{ form_errors(form.description) }}
                    </div>
                </div>

                <button id="add-link-input-row-button" class="btn btn-primary mt-2 mb-2">
                    <i class="fa fa-plus"></i>
                </button>

                <div id="link-input-rows-container" class="mb-3">
                    <div class="row" id="last-added-link-input-row" data-number="1">
                        <div class="form-group col-md-6">
                            <label for="link-url-input">Url</label>
                            <input type="text" name="links_urls[]" class="form-control" id="link-url-input">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="link-name-input">Name</label>
                            <input type="text" name="links_urls_names[]" class="form-control" id="link-name-input">
                        </div>
                    </div>
                </div>

                <input type="hidden" name="show_database_table_name" value="{{ showDatabaseTableName }}">

                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="{{ path('admin_show_list') }}"><button type="button" class="btn btn-outline-success">Go Back</button></a>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}