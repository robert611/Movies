{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="row website-overview mt-5">
        <div class="col-sm mb-2">
            <div class="card">
                <div class="card-body">
                    <h2><i style="font-size: 66px" class="fab fa-youtube"></i></h2>
                    <h4>1765 Episodes</h4>
                </div>
            </div>  
        </div>
        <div class="col-sm mb-2">
            <div class="card">
                <div class="card-body">
                    <h2><i style="font-size: 66px" class="fa fa-video"></i></h2>
                    <h4>45 Series</h4>
                </div>
            </div>  
        </div>
        <div class="col-sm mb-2">
            <div class="card">
                <div class="card-body">
                    <h2><i style="font-size: 66px" class="fa fa-user"></i></h2>
                    <h4>217 Users</h4>
                </div>  
            </div>
        </div>
        <div class="col-sm mb-2">
            <div class="card">
                <div class="card-body">
                    <h2>
                        <i style="font-size: 66px" class="fas fa-table"></i>
                    </h2>
                    <h4>
                        <a href="{ { path('admin_manage_shows') }}" class="btn btn-outline-dark">
                            <i class="fa fa-edit">Manage Shows Tables</i>
                        </a>
                    </h4>
                </div>  
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-sm mb-2">
            <div class="card">
                <div class="card-header admin-layout-color">
                    Upload file to a server
                </div>   
                <div class="card-body">
                    <form method="POST" action="{ { path('admin_upload_file') }}" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="picture-path" class="mb-2">Path</label>
                            <input type="text" class="form-control" id="picture-path" name="path" placeholder="For example: folder_name/folder_name/">
                            <small id="emailHelp" class="form-text text-muted"> Current path: /assets/pictures/</small>
                        </div>   

                        <div class="form-group mt-2">
                            <input type="file" name="picture" class="form-control-file">
                        </div>

                        <button type="submit" class="btn btn-outline-dark col-12 mt-3">Upload</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-sm mb-2">
            <div class="card">
                <div class="card-header admin-layout-color">
                    Send query to a database
                </div>   
                <div class="card-body">
                    <form method="POST" action="{ { path('admin_ask_query') }}">
                        <div class="form-group">
                            <label for="query" class="mb-2">Query(There is now way to see the results)</label>
                            <input type="text" class="form-control" id="query" name="query" placeholder="">
                        </div>

                        <button type="submit" class="btn btn-outline-dark col-12 mt-3">Send Query</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}