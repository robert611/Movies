{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }} 
    <script src="{{ asset('assets/js/shows_ranking.js') }}"></script>
    <script src="{{ asset('assets/js/find_episode.js') }}"></script>
    <script src="{{ asset('assets/js/find_show.js') }}"></script>
{% endblock %}

{% block body %}
    {{ include('index/_header.html.twig') }}

    <hr class="light-hr mt-20 mb-7">

    <main class="mt-20">
        <div class="container-fluid mt-5 px-4 pe-4">
        
            <div class="row">

                <div class="col-xs-12 col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3>#<span class="text-purple">Pojedynek</span> Seriali</h3>
                            <div class="row" id="container-for-shows-to-compare"></div>
                        </div>
                    </div> 

                    <div class="card mt-5 mb-2">
                        <div class="card-body">
                            <h3 class="cursive text-center">Top <span class="text-purple">15</span> seriali</h3>
                            <div class="mt-3">
                                {% if showsRanking is iterable %}
                                    {% for show in showsRanking %}
                                        <a class="nav-link side-menu card-custom-link"
                                        href="{ { path('series_index', {'seriesName' : show.getShowDatabaseTableName()}) }}" role="tab" aria-controls="v-pills-{{ show.getShowName() }}" aria-selected="true">{{ show.getShowName() }}</a>
                                    {% endfor %}
                                {% elseif showsRanking is defined %}
                                    <div class="alert alert-danger">
                                        <p class="mb-0">Ranking jest chwilowo niedostÄ™pny</p>
                                    </div>
                                {% endif %}    
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-8">
                    {% if showsLatestEpisodes is iterable %}
                    <div class="row">
                        {% for episode in showsLatestEpisodes %}
                            <div class="xol-xs-12 col-sm-6 col-md-4">
                                <div class="card mb-2">
                                    <img class="latest-episode-picture" src="{{ asset('assets/pictures/shows/'~episode.picture) }}" alt="{{ episode.picture }}">
                                    <div class="card-body">
                                        <a class="text-decoration-none" href="{ { path('series_index', {'seriesName' : episode.database_table_name, 'season': episode.season, 'episodeId': episode.id}) }}">
                                            <h5 class="card-title">
                                                {{ episode.show_name }}  {{ episode.title }}
                                            </h5>
                                        </a>
                                    </div>
                                    <div class="card-footer text-muted">
                                        {{ episode.created_at }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}